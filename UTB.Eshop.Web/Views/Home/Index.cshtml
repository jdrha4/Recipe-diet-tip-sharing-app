@model BaseViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex align-items-center">
                <h1 class="display-4 me-4" style="color: #28a745;">Kuchynka</h1>
                <!-- Add your green soft visuals styles here -->
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <p class="lead">
            Vitajte na našom úžasnom webovom portáli pre zdieľanie receptov! Objavte lahodné jedlá z rôznych kútov sveta,
            zdieľajte svoje obľúbené recepty a nájdite inšpiráciu pre každodenné varenie. Sme tu, aby sme vás inšpirovali
            a spojili komunitu vášnivých kuchárov. Pridajte sa k nám a začnite objavovať nové chute!
        </p>
    </div>

    <!-- Three boxes with links -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recepty</h5>
                    <p class="card-text">Objavte rôznorodé recepty od našich kuchárov.</p>
                    <a href="@Url.Action("Index", "Recipes")" class="btn btn-success">Prezrieť</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Jedálničky</h5>
                    <p class="card-text">Vytvorte si vlastné jedálničky podľa svojich preferencií.</p>
                    <a href="@Url.Action("Index", "Jidelnicky")" class="btn btn-success">Prezrieť</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tipy a Triky</h5>
                    <p class="card-text">Získajte užitočné tipy a triky pre lepšie varenie.</p>
                    <a href="@Url.Action("Index", "Tipy")" class="btn btn-success">Prezrieť</a>
                </div>
            </div>
        </div>
    </div>
</div>



@section Styles
{
    <link rel="stylesheet" href="~/css/shop_home.css" asp-append-version="true" />
}

@section Scripts
{
    <environment include="Development">
        <script src="~/js/product.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/product.min.js"></script>
    </environment>
}
