@model RecipeViewModel

@{
    ViewData["Title"] = "All Recipes";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex align-items-center">
                <h1 class="display-4 me-4" style="color: #28a745;">Recepty</h1>
                <!-- Add your green soft visuals styles here -->
            </div>
        </div>
    </div>

    <!-- Search Form -->
    <div class="container mt-3">
        <form method="get" action="@Url.Action("Index")">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search recipes..." name="searchTerm">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </form>
    </div>

    <!-- Filter Form for Difficulty -->
    <div class="container mt-3">
        <form method="get" action="@Url.Action("FilterDifficulty")">
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select" name="obtiaznost">
                        <option value="">Select Difficulty</option>
                        <option value="lahka">Easy</option>
                        <option value="stredna">Medium</option>
                        <option value="tazka">Hard</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-outline-secondary" type="submit">Filter</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Filter Form for Vegetarian -->
    <div class="container mt-3">
        <form method="get" action="@Url.Action("FilterVegetarian")">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="vegetarianskeJedlo" id="vegetarianskeJedlo" value="true">
                        <label class="form-check-label" for="vegetarianskeJedlo">
                            Vegetarian
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-outline-secondary" type="submit">Filter</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Display Recipes -->
    @if (Model != null && Model.Recipes != null && Model.Recipes.Count > 0)
    {
        <div class="container">
            <div class="row">
                @foreach (var recipe in Model.Recipes)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@recipe.Nazov</h5>
                                <p class="card-text">@recipe.Popis</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Preferencia: @recipe.Preferencia</li>
                                <li class="list-group-item">Obtiaznost: @recipe.Obtiaznost</li>
                                <li class="list-group-item">Ingredients: @recipe.Ingrediencie</li>
                                <li class="list-group-item">Vegetarian: @(recipe.VegetarianskeJedlo ? "Yes" : "No")</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p>No recipes available.</p>
    }

    @section Styles
    {
        <!-- Add any additional styles needed for your recipe display -->
    }

    @section Scripts
    {
        <!-- Add any additional scripts needed for your recipe display -->
    }
