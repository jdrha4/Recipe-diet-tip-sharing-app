@model IList<Recipe>

@{
    ViewData["Title"] = "Manage All Recipes";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-responsive table-striped table-bordered">
        <thead>
            <tr>
                <th>@nameof(Recipe.Id)</th>
                <th>@nameof(Recipe.Nazov)</th>
                <th>@nameof(Recipe.Popis)</th>
                <th>@nameof(Recipe.Preferencia)</th>
                <th>@nameof(Recipe.Obtiaznost)</th>
                <th>@nameof(Recipe.Ingrediencie)</th>
                <th>@nameof(Recipe.VegetarianskeJedlo)</th>
                <th>Action</th>
                <th>Edit</th> <!-- Add a new column header for the Edit button -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nazov</td>
                    <td>@item.Popis</td>
                    <td>@item.Preferencia</td>
                    <td>@item.Obtiaznost</td>
                    <td>@item.Ingrediencie</td>
                    <td>@item.VegetarianskeJedlo</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</button>
                        </form>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminRecipes" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No recipes to manage!</h2>
}
